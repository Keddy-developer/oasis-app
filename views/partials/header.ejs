<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="nav-header">
    <a href="/"><img class="oasis-logo" src="/oasis-logo.png" alt="Oasis Logo"></a>
    <ul>
      <% if (user) { %>
        <li>Welcome, <%= user.userName.split(' ').map(name => name.charAt(0).toUpperCase() + name.slice(1).toLowerCase()).join(' ') %></li>
        <li><a href="/logout">Log out</a></li>
    <% } else { %>
        <li><a href="/login">Log in</a></li>
    <% } %>
    </ul>
  </nav>

 
</body>
</html>
